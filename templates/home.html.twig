
<html>
    <head>
        <meta charset="UTF-8">
        <title>Welcome!</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/uikit@latest/dist/css/uikit.min.css">
    </head>
        <header class="uk-flex uk-flex-center">
                <h1>Lista postaci</h1>
        </header>
    <body class="uk-padding-small">
        <div class="uk-padding-small uk-grid uk-grid-medium uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-grid-match"
         data-uk-grid="masonry: true" data-uk-sortable="handle: .drag-icon">
        {% for Key in Data|slice(0, 12) %}
            <div class="uk-padding-small" ><h2 class="uk-flex uk-flex-center">{{ Key.name }}</h2>
            <img class="uk-height-max-medium uk-flex uk-flex-center" alt={{ Key.name }} src={{ Key.image }}>
                <div class="uk-card uk-card-default uk-card-body uk-card-small uk-card-default uk-border-rounded" style="overflow: auto; height: 20vh">
                    <ul>
                        {% for Number in Key.episode %}
                        <li>{{ Number.name }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
        </div>
        <div class="uk-flex uk-flex-center">
            {% if Id > 1 %}
            <a class="uk-input uk-input-button uk-width-1-2 uk-flex uk-flex-center" href='/{{ IdDown }}'> Poprzednia Strona </a>
            <a class="uk-input uk-input-button uk-width-1-2 uk-flex uk-flex-center" href='/{{ IdUp }}'>Następna Strona</a>
            {% else %}
            <a class="uk-input uk-input-button uk-width-1-2 uk-flex uk-flex-center" href='/{{ IdUp }}'>Następna Strona</a>
            {% endif %}
        </div>
        <script src="https://cdn.jsdelivr.net/npm/uikit@latest/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@latest/dist/js/uikit-icons.min.js"></script>
    </body>
</html>
